start_order: 2
image: "{{ edpm_ovn_metadata_agent_image }}"
net: host
privileged: true
user: root
restart: always
depends_on:
  - openvswitch.service
volumes:
  {% set edpm_ovn_metadata_volumes = [] %}
  {%- set edpm_ovn_metadata_volumes =
          edpm_ovn_metadata_volumes +
          edpm_ovn_metadata_common_volumes %}
  {{ edpm_ovn_metadata_volumes }}
environment:
  KOLLA_CONFIG_STRATEGY: COPY_ALWAYS
