{
    "command": "/usr/sbin/virtqemud --config /etc/libvirt/virtqemud.conf",
    "config_files": [
        {
            "source": "/var/lib/kolla/config_files/virtqemud.conf",
            "dest": "/etc/libvirt/virtqemud.conf",
            "owner": "libvirt",
            "perm": "0600"
        },
        {
            "source": "/var/lib/kolla/config_files/qemu.conf",
            "dest": "/etc/libvirt/qemu.conf",
            "owner": "libvirt:qemu",
            "perm": "0660"
        },
        {
            "source": "/var/lib/kolla/config_files/ceph",
            "dest": "/etc/ceph",
            "owner": "libvirt:qemu",
            "perm": "0770",
            "optional": true
        }
    ],
    "permissions": [
        {
            "path": "/etc/ceph/*",
            "owner": "libvirt:qemu",
            "perm:": "0660"
        },
        {
            "path": "/var/log/containers/libvirt",
            "owner": "libvirt:libvirt",
            "recurse": true
        },
        {
            "path": "/var/lib/libvirt",
            "owner": "libvirt:libvirt",
            "recurse": true
        } ,
        {
            "path": "/run/libvirt",
            "owner": "libvirt:libvirt",
            "recurse": true
        }
    ]
}
