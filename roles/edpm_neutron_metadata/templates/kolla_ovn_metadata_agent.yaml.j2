command: "neutron-ovn-metadata-agent --log-file={{ edpm_neutron_metadata_agent_log_dir }}/ovn-metadata-agent.log"
config_files:
  - source: /etc/neutron.conf.d/01-rootwrap.conf
    dest: /etc/neutron/rootwrap.conf
    owner: root:root
    perm: '0600'
permissions:
  - owner: neutron:neutron
    path: /var/log/neutron
    recurse: true
  - owner: neutron:neutron
    path: /var/lib/neutron
    recurse: true
  - optional: true
    owner: neutron:neutron
    path: /etc/pki/tls/certs/ovn_metadata.crt
    perm: 0644
  - optional: true
    owner: neutron:neutron
    path: /etc/pki/tls/private/ovn_metadata.key
    perm: 0644
